          <textarea name="item_id" id="" cols="30" rows="10" style="display: none;"><%= itemAndOwner.id %></textarea>
          <button type="submit" class="favourite_button"><i class="fa-solid fa-heart"></i></button>
        </form>
        <h3><%= itemAndOwner.title %></h3>
