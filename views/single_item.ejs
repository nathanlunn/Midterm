    <!-- </div> -->
    <div class="message_sent hide">
      <h3>message sent</h3>
      <form action="/messages" method="GET">
        <button type="submit" class="messages_redirect">View Your Messages</button>
      </form>
    </div>

    <div class="message_form">
      <h2>Contact <%= itemAndOwner.name %> about <%= itemAndOwner.title %>:</h2>
      <div class="contact">
        <% if (itemAndOwner.phone) { %>
          <h4>By phone: <%= itemAndOwner.phone %></h4>
        <% } %>
        <h4>By email: <%= itemAndOwner.email %> </h4>
        <form class="send_ajax">
          <h4>or message <%= itemAndOwner.name %> directly:</h4>
          <textarea name="content" placeholder="Hey! is this still available?" class="message_box" type="submit"></textarea>
          <textarea name="item_id" class="hide"><%= itemAndOwner.id %></textarea>
          <textarea name="owner_id" class="hide"><%= itemAndOwner.owner_id %></textarea>
          <button type="submit">Send Message</button>
        </form>
      </div>
    </div>

  </article>
</body>
