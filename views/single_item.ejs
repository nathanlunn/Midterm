  <script type="text/javascript" src="../scripts/single_item-client.js"></script>

  <title><%= itemAndOwner.title %></title>
</head>
<body>
  <!-- replace with nav bar -->
  <nav class="header">  <%- include('partials/_header') %></nav>

  <article class="single_item_page">

    <div class="item_description">
      <div class="item_wrap">
        <img src="<%= itemAndOwner.photo_url %>" alt="">
        <div class="item_info">
          <form action="/favourites" method="GET" class="favourite">
            <label for="favourite"></label>
            <textarea name="item_id" id="" cols="30" rows="10" style="display: none;"><%= itemAndOwner.id %></textarea>
            <% if (favourite) { %>
              <button type="submit" class="favourite_button red"><i class="fa-solid fa-heart"></i></button>
              <% } else { %>
              <button type="submit" class="favourite_button"><i class="fa-solid fa-heart"></i></button>
            <% } %>
          </form>
          <h3>Title: <%= itemAndOwner.title %></h3>
          <h3>Price: $<%= itemAndOwner.price/100 %></h3>
          <h3>About:</h3>
          <p><%= itemAndOwner.description %></p>
          <h5>being sold by: <%= itemAndOwner.name %></h5>
        </div>
      </div>
    </div>

    
    <!-- <div class="item_display">

      <div class="item_image">
        <img src="<%= itemAndOwner.photo_url %>" alt="">
      </div> -->

