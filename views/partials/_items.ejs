<% for (let item of items) { %>

    <div class="row featurette">
      <div class="col-5">
        <img class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="500" height="500" src="<%=item.photo_url %>"/>
