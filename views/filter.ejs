  <title>Document</title>
</head>

<body>
  <nav class="header">  <%- include('partials/_header') %></nav>
  <div class="body">
    <section class="login-form">
      <h1>Search Items</h1>
      <form class="newItem" action="/filter" method="POST">
        <div class="int-area">
          <input type="text" name="name" id="title" autocomplete="off" required />
          <label>Name</label>
        </div>
        <div class="int-area" id="minimum-price">
          <input type="text" name="minprice" id="price" autocomplete="off" required />
          <label id="minpriceLabel">Minimum Price</label>
        </div>
        <div class="int-area" id="maximum-price">
          <input type="text" name="maxprice" id="price" autocomplete="off" required />
          <label id="maxpriceLabel">Maximum Price</label>
        </div>
        <div class="btn-area">
          <button type="submit" id="search-button">Search</button>
        </div>
      </form>
    </section>
    <div class="popup-bg">
      <div class="popup">
        <section class="item-container">
          
        </section>
      </div>
    </div>
</div>
</body>

</html>