<body>
  <nav class="header">  <%- include('partials/_header') %></nav>
  <div class="body">
    <section class="login-form">
      <h1>Add a new listing</h1>
      <form class="newItem" action="/listings/new" method = "POST">
        <div class="int-area">
          <input type="text" name ="title" id="title" autocomplete="off" required>
          <label>Title </label>
        </div>
        <div class="int-area">
          <input type="text" name ="description" id="description" autocomplete="off" required>
          <label>Description </label>
        </div> 
        <div class="int-area" id="price-id">
          <input type="text" name ="price" id="price" autocomplete="off" required>
          <label id="priceLabel">Price</label>
        </div>
        <div class="int-area">
          <input type="text" name ="photo" id="photo" autocomplete="off" required>
          <label>Photo Url</label>
        </div>
        
        <div class="btn-area">
          <button type="submit" >Publish</button>
        </div>
      </form>
      <div class="caption">
        
      </div>

    </section>
  </div>
  
</body>

