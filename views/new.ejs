<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="stylesheet" href="/styles/new.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script type="text/javascript" src="/scripts/new_items.js"></script>
  <title>Document</title>
  
</head>

<body>
  <section class="login-form">
    <h1>Add a new listing</h1>
    <form class="newItem" action="/listings/new" method = "POST">
      <div class="int-area">
        <input type="text" name ="title" id="title" autocomplete="off" required>
        <label>Title </label>
      </div>
      <div class="int-area">
        <input type="text" name ="description" id="description" autocomplete="off" required>
        <label>Description </label>
      </div> 
      <div class="int-area" id="price-id">
        <input type="text" name ="price" id="price" autocomplete="off" required>
        <label id="priceLabel">Price</label>
      </div>
      <div class="int-area">
        <input type="text" name ="photo" id="photo" autocomplete="off" required>
        <label>Photo Url</label>
      </div>
      
      <div class="btn-area">
        <button type="submit" >Publish</button>
      </div>
    </form>
    <div class="caption">
      
    </div>

  </section>
  
</body>

</html>